<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".AddClinicActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_clinic"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/clinic"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lottie_clinic"
        android:id="@+id/clinicll"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Name"
            android:layout_marginLeft="50dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/clinic_name"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:ems="10"
            android:hint="Clinic Name"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/clinicll"
        android:id="@+id/clinicll2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Address"
            android:layout_marginLeft="50dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/clinicaddress"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:ems="10"
            android:hint="Clinic Address"
            android:inputType="textPostalAddress" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/clinicll2"
        android:id="@+id/clinicll3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginLeft="50dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/clinicCity"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="95dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:ems="10"
            android:hint="City"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/clinicll3"
        android:id="@+id/clinicll4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:layout_marginLeft="50dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India"
            android:textSize="18dp"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/clinicll4"
        android:id="@+id/clinicll5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Start Time"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/clinictimepicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/clinicmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/clinicll5"
        android:id="@+id/clinicll6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic End Time"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/clinictimepicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:text="Select Time"
            android:textSize="18dp"
            android:layout_marginLeft="37dp"
            />
        <TextView
            android:id="@+id/clinicmin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18dp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/clinicll6"
        android:gravity="center"
        android:id="@+id/clinicll7"
        >

        <com.spark.submitbutton.SubmitButton
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Submit"
            android:textColor="@color/gray"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="3000"
            android:onClick="onClick"
            app:sub_btn_line_color="@android:color/holo_green_dark"
            app:sub_btn_ripple_color="@android:color/holo_green_dark"
            app:sub_btn_tick_color="@color/white" />
    </LinearLayout>


</RelativeLayout>